<%- include('components/header') -%>
<div class="search">
    <input type="text" placeholder="search users..." class="searchtext"/>
    <button class="searchbtn">Search</button>
</div>

<div class="container">
 
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
             
            </thead>
            <tbody>
                <% if (data) { %>
                    <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= (i + 1) %></td>
                            <td><%= data[i].NAME %></td>
                            <td><%= data[i].ADDRESS %></td>
                            <td><%= data[i].PHONE %></td>
                            <td><%= data[i].EMAIL %></td>
                            <td>
                                <a href="/delete/<%= data[i].ID %>" class="btn">Delete</a>
                                <a href="/update/<%= data[i].ID %>" class="btn">Update</a>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
    <div class="col">
        <div class="card">
           
            <div class="card-body">
                <form  class="saveform">
                    <h1>
                        Customers
                      </h1>
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" name="name" placeholder="Name" class="name" >
                        <label class="nameerror"></label>
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" name="address" placeholder="Address" class="address" >
                        <label class="addresserror"></label>
                    </div>
                    <div class="form-group">
                        <label>Phone:</label>
                        <input type="text" name="phone" placeholder="Phone" class="phone" >
                        <label class="phoneerror"></label>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="text" name="email" placeholder="Email" class="email" >
                        <label class="emailerror"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Save Customer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

<%-include('components/footer.ejs') %>